rules_version = '2';
service cloud.firestore {
  match /databases/{database}/documents {
    // Permettre l'accès aux formulaires pour les utilisateurs authentifiés (même anonymes)
    match /forms/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Permettre l'accès aux soumissions pour les utilisateurs authentifiés
    match /form_submissions/{document} {
      allow read, write: if request.auth != null;
    }
    
    // Règles par défaut pour les autres collections
    match /{document=**} {
      allow read, write: if request.auth != null;
    }
  }
}